<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Define the form view for the Extra Visit Wizard -->
    <record id="view_extra_visit_wizard_form" model="ir.ui.view">
        <field name="name">extra.visit.wizard.form</field>
        <field name="model">extra.visit.wizard</field>
        <field name="arch" type="xml">
            <!-- The wizard form layout -->
            <form string="Add Extra Visits">
                <group>
                    <!-- Hidden fields to store contract and its folder (not editable by user) -->
                    <field name="contract_id" invisible="1"/>
                    <field name="contract_folder_id" invisible="1"/>

                    <!-- Header text showing the partner name -->
                    <h3>
                        Add Extra Visits for
                        <field name="partner_id" readonly="1" class="oe_inline"/>
                    </h3>

                    <!-- Input fields for user to configure extra visits -->
                    <group>
                        <!-- Select the month folder where extra visits will be stored -->
                        <field name="month_folder_id" options="{'no_create': True, 'no_open': True}"/>

                        <!-- Enter how many extra visits to create -->
                        <field name="number_of_visits"/>

                        <!-- Provide a reason for the extra visits -->
                        <field name="reason"/>
                    </group>
                </group>

                <!-- Footer buttons -->
                <footer>
                    <!-- Confirm button: triggers the Python method 'action_create_extra_visits' -->
                    <button name="action_create_extra_visits"
                            string="Create Visits"
                            type="object"
                            class="btn-primary"/>

                    <!-- Cancel button: closes the wizard without doing anything -->
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
