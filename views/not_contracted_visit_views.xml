<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_not_contracted_visit_sign_requests" model="ir.actions.act_window">
        <field name="name">Signature Requests</field>
        <field name="res_model">sign.request</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('not_contracted_visit_id', '=', active_id)]</field>
        <field name="context">
            {'search_default_not_contracted_visit_id': active_id, 'default_not_contracted_visit_id': active_id}
        </field>
    </record>

    <record id="view_not_contracted_visit_form" model="ir.ui.view">
        <field name="name">not.contracted.visit.form</field>
        <field name="model">not.contracted.visit</field>
        <field name="arch" type="xml">
            <form string="Not Contracted Company Visit">
                <header>
                    <button name="action_send_report_for_signature" string="Request Signature" type="object"
                            class="btn-primary" icon="fa-paper-plane" invisible="state != 'pending'"/>
                    <button name="action_print_report" string="Print Report" type="object" class="btn-secondary"
                            icon="fa-print"/>
                    <button name="action_mark_done" string="Mark as Done" type="object" class="btn-secondary"
                            icon="fa-check" invisible="state != 'pending'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state == 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,done"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Completed" bg_color="bg-success" invisible="state != 'done'"/>
                    <widget name="web_ribbon" title="Cancelled" bg_color="bg-danger" invisible="state != 'cancelled'"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_not_contracted_visit_sign_requests)d" type="action"
                                class="oe_stat_button" icon="fa-pencil-square-o">
                            <field name="sign_request_ids" widget="statinfo" string="Signatures"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Visit Reference"/>
                        <h1>
                            <field name="name" placeholder="e.g. NCV-2025-001"/>
                        </h1>
                        <h3>
                            <span class="text-muted">Client:</span>
                            <field name="partner_id" widget="res_partner_many2one" context="{'show_address': 1}"
                                   options='{"always_reload": True}'/>
                        </h3>
                    </div>
                    <group>
                        <group string="Visit Details">
                            <field name="visit_date"/>
                            <field name="partner_address" widget="char" class="text-break"/>
                        </group>
                        <group string="Assignment">
                            <field name="assign_engineer_id" widget="many2one_avatar_user"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Report Details" name="details" icon="fa-file-text-o">
                            <group>
                                <field name="reason" placeholder="Summary of the issue..."/>
                                <field name="description" placeholder="Technical notes and observations..."
                                       widget="text" style="min-height: 100px;"/>
                            </group>
                        </page>
                        <page string="Signatures" name="signatures" icon="fa-pencil">
                            <div class="row mt16">
                                <div class="col-6">
                                    <div class="text-center p-2"
                                         style="border: 1px dashed #ccc; border-radius: 5px; background: #f9f9f9;">
                                        <strong>Engineer Signature</strong>
                                        <field name="engineer_signature" widget="signature" style="margin-top: 10px;"/>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="text-center p-2"
                                         style="border: 1px dashed #ccc; border-radius: 5px; background: #f9f9f9;">
                                        <strong>Client Signature</strong>
                                        <field name="client_signature" widget="signature" style="margin-top: 10px;"/>
                                    </div>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_not_contracted_visit_list" model="ir.ui.view">
        <field name="name">not.contracted.visit.list</field>
        <field name="model">not.contracted.visit</field>
        <field name="arch" type="xml">
            <list string="Not Contracted Company Visits" decoration-success="state == 'done'"
                  decoration-info="state == 'pending'" decoration-danger="state == 'cancelled'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="visit_date"/>
                <field name="assign_engineer_id" widget="many2one_avatar_user"/>
                <field name="state" widget="badge" decoration-success="state == 'done'"
                       decoration-info="state == 'pending'" decoration-danger="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <record id="action_not_contracted_visit" model="ir.actions.act_window">
        <field name="name">Not Contracted Company</field>
        <field name="res_model">not.contracted.visit</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>