<odoo>
    <!--  Kanban view for top-level company folders  -->
    <record id="view_visit_folder_kanban" model="ir.ui.view">
        <field name="name">visit.folder.kanban</field>
        <field name="model">visit.folder</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="document_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <i class="fa fa-folder fa-3x" style="color: #f0ad4e;"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span>
                                            <t t-esc="record.document_count.raw_value"/>
                                            Reports
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!--  Form view for nested folder   -->
    <record id="view_visit_folder_form" model="ir.ui.view">
        <field name="name">visit.folder.form</field>
        <field name="model">visit.folder</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                    <field name="is_company_folder" invisible="1"/>
                    <div class="oe_title">
                        <h1 class="d-flex align-items-center">
                            <span class="fa fa-folder-open-o mr-2" invisible="not is_company_folder"/>
                            <span class="fa fa-calendar-check-o mr-2" invisible="is_company_folder"/>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <div invisible="not is_company_folder">
                        <h2>Monthly Folders</h2>
                        <field name="child_folder_ids"  nolabel="1">
                            <!--  Kanban view for monthly folders  -->
                            <kanban>
                                <field name="name"/>
                                <field name="document_count"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div t-attf-class="oe_kanban_global_click">
                                            <div class="o_kanban_image">
                                                <i class="fa fa-calendar fa-3x" style="color: #5bc0de;"/>
                                            </div>
                                            <div class="oe_kanban_details">
                                                <strong class="o_kanban_record_title">
                                                    <field name="name"/>
                                                </strong>
                                                <div class="o_kanban_record_bottom">
                                                    <div class="oe_kanban_bottom_left">
                                                        <span>
                                                            <t t-esc="record.document_count.raw_value"/>
                                                            Reports
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </div>
                    <div invisible="is_company_folder">
                        <h2>Visit Reports to Complete</h2>
                        <field name="visit_ids" nolabel="1">
                            <!--
                                CORRECTED: Removed 'editable="bottom"' to make the list rows
                                clickable, which will open the full visit form.
                            -->
                            <list>
                                <field name="name" readonly="1"/>
                                <field name="visit_date" readonly="1"/>
                                <field name="assign_engineer_id"/>
                                <field name="reason" string="Problem/Reason"/>
                                <field name="state" readonly="1"/>
                            </list>
                        </field>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <!--  Action to show   -->
    <record id="action_visit_folder" model="ir.actions.act_window">
        <field name="name">Document Folders</field>
        <field name="res_model">visit.folder</field>
        <field name="view_mode">kanban,form</field>
        <field name="domain">[('parent_id', '=', False)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No company folders found.</p>
            <p>Create a contract and click 'Start Contract' to automatically generate a folder structure.</p>
        </field>
    </record>
</odoo>
