<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ================== KANBAN VIEW ================== -->
    <record id="view_visit_folder_kanban" model="ir.ui.view">
        <field name="name">visit.folder.kanban</field>
        <field name="model">visit.folder</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="document_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <!-- Folder icon -->
                            <div class="o_kanban_image">
                                <i class="fa fa-folder fa-3x" style="color: #f0ad4e;"/>
                            </div>
                            <!-- Folder name + count -->
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span>
                                            <t t-esc="record.document_count.raw_value"/>
                                            Reports
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ================== FORM VIEW ================== -->
    <record id="view_visit_folder_form" model="ir.ui.view">
        <field name="name">visit.folder.form</field>
        <field name="model">visit.folder</field>
        <field name="arch" type="xml">
            <!-- Disable create/edit for folders, they are managed by automation -->
            <form create="false" edit="false">
                <sheet>
                    <!-- Technical flags -->
                    <field name="is_company_folder" invisible="1"/>
                    <field name="is_not_contracted_folder" invisible="1"/>

                    <!-- Folder name -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <!-- COMPANY FOLDERS (root company folders) -->
                    <div invisible="not is_company_folder or is_not_contracted_folder">
                        <h2>Monthly Folders</h2>
                        <field name="child_folder_ids" nolabel="1">
                            <kanban>
                                <field name="name"/>
                                <field name="document_count"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div t-attf-class="oe_kanban_global_click">
                                            <div class="o_kanban_image">
                                                <i class="fa fa-calendar fa-3x" style="color: #5bc0de;"/>
                                            </div>
                                            <div class="oe_kanban_details">
                                                <strong>
                                                    <field name="name"/>
                                                </strong>
                                                <div>
                                                    <span>
                                                        <t t-esc="record.document_count.raw_value"/>
                                                        Reports
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </div>

                    <!-- NON-COMPANY FOLDERS (contain visit reports directly) -->
                    <div invisible="is_company_folder or is_not_contracted_folder">
                        <h2>Visit Reports to Complete</h2>
                        <field name="visit_ids" nolabel="1">
                            <list decoration-info="is_extra_visit==True">
                                <!-- Show icon if it's an extra visit -->
                                <field name="is_extra_visit" invisible="1"/>
                                <button name="action_open_visit_form" type="object" icon="fa-plus-circle text-info"
                                        invisible="not is_extra_visit"/>
                                <!-- Visit info -->
                                <field name="name"/>
                                <field name="visit_date"/>
                                <field name="assign_engineer_id"/>
                                <field name="reason"/>
                                <field name="state"/>
                            </list>
                        </field>
                    </div>

                    <!-- NOT CONTRACTED ROOT FOLDER (monthly subfolders) -->
                    <div invisible="not is_not_contracted_folder or parent_id">
                        <h2>Monthly Folders</h2>
                        <field name="child_folder_ids" nolabel="1">
                            <kanban>
                                <field name="name"/>
                                <field name="document_count"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div t-attf-class="oe_kanban_global_click">
                                            <div class="o_kanban_image">
                                                <i class="fa fa-calendar fa-3x" style="color: #5bc0de;"/>
                                            </div>
                                            <div class="oe_kanban_details">
                                                <strong>
                                                    <field name="name"/>
                                                </strong>
                                                <div>
                                                    <span>
                                                        <t t-esc="record.document_count.raw_value"/>
                                                        Reports
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </div>

                    <!-- CHILD NOT CONTRACTED FOLDER (holds reports) -->
                    <div invisible="not parent_id or not parent_id.is_not_contracted_folder">
                        <h2>Visit Reports</h2>
                        <field name="document_ids" nolabel="1">
                            <list>
                                <field name="name"/>
                            </list>
                        </field>
                    </div>

                </sheet>
            </form>
        </field>
    </record>

    <!-- ================== ACTION ================== -->
    <record id="action_visit_folder" model="ir.actions.act_window">
        <field name="name">Document Folders</field>
        <field name="res_model">visit.folder</field>
        <field name="view_mode">kanban,form</field>
        <!-- Only top-level folders -->
        <field name="domain">[('parent_id', '=', False)]</field>
    </record>
</odoo>
