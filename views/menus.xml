<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Menu -->
    <menuitem
        id="menu_visit_tracker_root"
        name="Visit Tracker"
        web_icon="company_visit_tracker,static/description/icon.png"
        sequence="1"/>

    <!-- Window Action for Contracts -->
    <record id="action_visit_contract" model="ir.actions.act_window">
        <field name="name">Contracts</field>
        <field name="res_model">visit.contract</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Window Action for All Visits  -->
    <record id="action_company_visit_all" model="ir.actions.act_window">
        <field name="name">All Visits</field>
        <field name="res_model">company.visit</field>
        <field name="view_mode">list,form,calendar,graph,pivot</field>
    </record>

    <!-- Window Action for Folders -->
    <record id="action_visit_folder" model="ir.actions.act_window">
        <field name="name">Document Folders</field>
        <field name="res_model">visit.folder</field>
        <field name="view_mode">kanban,form</field>
        <field name="domain">[('is_company_folder', '=', True)]</field>
    </record>

    <!-- Submenu for Contracts -->
    <menuitem
        id="menu_visit_contract"
        name="Contracts"
        parent="menu_visit_tracker_root"
        action="action_visit_contract"
        sequence="1"/>

    <!-- Submenu for All Visits -->
    <menuitem
        id="menu_company_visit_all"
        name="All Visits"
        parent="menu_visit_tracker_root"
        action="action_company_visit_all"
        sequence="2"/>

    <!-- Submenu for Folders -->
    <menuitem
        id="menu_visit_folder"
        name="Document Folders"
        parent="menu_visit_tracker_root"
        action="action_visit_folder"
        sequence="3"/>
</odoo>